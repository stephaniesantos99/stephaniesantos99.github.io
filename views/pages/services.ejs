<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container">
    <header><%- include('../partials/header'); %></header>

    <main>
      <div class="text-center container-fluid">
        <h1 style ="color: blue;">Let's embark on a journey of discovery.</h1>
        <p class="fs-4">
          Explore for diverse range of courses tailored for your success. Click the links below to jumpstart your learning journey and unlock a world of knowledge and skills.
        </p>
        <div class="row">
          <!-- Loop through the servicesList to generate service lists -->
          <% content.forEach((service) => { %>
          <div class="col-md-4 mb-4">
            <div class="card">
              <!-- Add service photo as an image -->
              <a class="service-link" href="<%= service.link %>">
              <img src="<%= service.photo %>" class="card-img-top" alt="<b><%= service.name %></b>">
              </a>
              <div class="card-body">
                <h3 class="card-title"><%= service.name %></h3>
                <ul class="list-group"></ul>
                
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
