<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
</head>
<body>
  <header><%- include('../partials/header'); %></header>

  <main class="container mt-4">
    <!-- About Me -->
    <div id="about" class="d-flex align-items-center">
      
      <div class="ms-3">
        <p class="fs-3 text-primary">About Me</p>
        <p class="fs-5">
        <%= content.selfIntroduction %>
        </p>
        <br>
        <p class="fs-7 text-primary"><b>Want to know more about me?</b></br>
        <a class="btn btn-primary"
          href="<%=content.resumeUrl %>"
          >Resume</a
        >
      </p>
      </div>
      <img src="/images/logo-me.jpeg" alt="profilepicture"  width="200" height="200" style="float: right;" />
    </div>
    <hr />
    <!-- Education -->
    <div id="education" class="text-center">
      <p class="fs-3 text-primary">Education</p>
      <% content.education.forEach((item) => { %>
        <div class="education-item">
          <a class="navbar-brand" href="https://www.centennialcollege.ca">
            <img src="<%= item.screenShotUrl %>" alt="College Logo" class="img-fluid" />
          </a>
          <!-- <p class="fs-5"><%= item.name %> - <span class="text-muted"><%= item.Location %></span></p> -->
          <p class="fs-5"><%= item.Location %></p>
          <p class="fs-5"><%= item.degree %></p>
          <p class="fs-5"><%= item.date %></p>
        </div>
      <% }); %>
    </div>
    <hr />
    <!-- Work Experience -->
    <div id="workExperiences" class="text-center">
    <p class="fs-3 text-primary mt-4">Work Experience</p>

  <% content.workExperiences.forEach((item) => { %>
    <div class="work-experience-item">
      <a class ="navbar-brand" href="https://www.aprimo.com">
        <img src="/images/aprimo.jpeg" alt="Company Logo" class="img-fluid" />
      </a>
      <p class="fs-5"><%= item.company %> - <span class="text-muted"><%= item.location %></span></p>
      <p class="fs-5"><%= item.position %></p>
      <p class="fs-5"><%= item.date %></p>
    </div>
  <% }); %>
  </div>
  </main>

  <footer><%- include('../partials/footer'); %></footer>
</body>
</html>
